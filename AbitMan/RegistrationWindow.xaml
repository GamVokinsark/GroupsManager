<Window x:Name="RegistrationWindow1" x:Class="AbitMan.RegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AbitMan"
        mc:Ignorable="d"
        Title="AbitMan: Регистрация" Height="199.996" Width="278.672" ResizeMode="NoResize">
    <Grid>
        <Button x:Name="RegisterButton" Content="Зарегистироваться" HorizontalAlignment="Left" Margin="67,124,0,0" VerticalAlignment="Top" Width="129" IsDefault="True" FontSize="14"/>
        <Label Content="Логин:" HorizontalAlignment="Left" Margin="14,16,0,0" VerticalAlignment="Top" FontSize="14"/>
        <Label Content="Пароль:" HorizontalAlignment="Left" Margin="14,56,0,0" VerticalAlignment="Top" FontSize="14"/>
        <TextBox x:Name="LoginText" HorizontalAlignment="Left" Height="23" Margin="77,21,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="163" FontSize="14" UndoLimit="20"/>
        <CheckBox x:Name="IsAdminChB" Content="Сделать администратором" HorizontalAlignment="Left" Margin="34,95,0,0" VerticalAlignment="Top" FontSize="14"/>
        <PasswordBox x:Name="PasswordText" HorizontalAlignment="Left" Margin="77,61,0,0" VerticalAlignment="Top" FontSize="14" Width="163"/>

    </Grid>
</Window>
