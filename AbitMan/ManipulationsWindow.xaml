                            </ComboBox>

                        </Grid>
                    </GroupBox>
                    <GroupBox Header="Изменить" Margin="234,222,0,0">
                        <Grid Margin="0,0,0,0">
                            <Button x:Name="DiscChangeButton" Content="Изменить" HorizontalAlignment="Left" Margin="80,122,0,0" VerticalAlignment="Top" Width="75" Click="DiscChangeButton_Click"/>
